{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Invoices",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "events": {
                    "click": [
                      {
                        "path": "add-invoice",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ],
                        "type": "popup",
                        "width": 800
                      }
                    ]
                  },
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button"
                },
                {
                  "events": {
                    "click": [
                      {
                        "condition": "${event?.Value == \"csv\"}",
                        "fileName": "Invoices",
                        "name": "SimpleInvoice.getInvoices",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${grid0.Query.Filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Company,Customer,Tax"
                          },
                          {
                            "name": "$select",
                            "value": "InvoiceId,InvoiceNumber,Company.Name,Customer.Name,InvoiceDate,InvoiceDueDate,Tax.Name,Total,Discount,BeforeTax,TaxAmount,GrandTotal"
                          }
                        ],
                        "type": "export"
                      },
                      {
                        "condition": "${event == null || event.Value == \"xlsx\"}",
                        "fileName": "Invoices",
                        "format": "xlsx",
                        "name": "SimpleInvoice.getInvoices",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${grid0.Query.Filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Company,Customer,Tax"
                          },
                          {
                            "name": "$select",
                            "value": "InvoiceId,InvoiceNumber,Company.Name,Customer.Name,InvoiceDate,InvoiceDueDate,Tax.Name,Total,Discount,BeforeTax,TaxAmount,GrandTotal"
                          }
                        ],
                        "type": "export"
                      }
                    ]
                  },
                  "icon": "get_app",
                  "items": [
                    {
                      "icon": "",
                      "text": "Excel",
                      "value": "xlsx"
                    },
                    {
                      "icon": "",
                      "text": "CSV",
                      "value": "csv"
                    }
                  ],
                  "name": "splitbutton0",
                  "style": {
                    "marginBottom": "10px",
                    "marginLeft": "10px"
                  },
                  "text": "Export",
                  "type": "splitbutton"
                },
                {
                  "attributes": [
                    {
                      "name": "@oninput",
                      "value": "@(async(args) => {search = $\"{args.Value}\";await grid0.GoToPage(0);await Load();})"
                    }
                  ],
                  "name": "textbox0",
                  "placeholder": "Search ...",
                  "style": {
                    "display": "block",
                    "marginBottom": "10px",
                    "width": "100%"
                  },
                  "type": "textbox",
                  "value": ""
                },
                {
                  "allowFiltering": true,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "property": "InvoiceId",
                      "title": "Invoice Id",
                      "visible": false
                    },
                    {
                      "property": "InvoiceNumber",
                      "title": "Invoice Number"
                    },
                    {
                      "filterProperty": "Company.Name",
                      "property": "CompanyId",
                      "sortProperty": "Company.Name",
                      "template": "${data.Company?.Name}",
                      "title": "Company"
                    },
                    {
                      "filterProperty": "Customer.Name",
                      "property": "CustomerId",
                      "sortProperty": "Customer.Name",
                      "template": "${data.Customer?.Name}",
                      "title": "Customer"
                    },
                    {
                      "formatString": "{0:yyyy-MM-dd}",
                      "property": "InvoiceDate",
                      "title": "Invoice Date"
                    },
                    {
                      "formatString": "{0:yyyy-MM-dd}",
                      "property": "InvoiceDueDate",
                      "title": "Invoice Due Date",
                      "visible": false
                    },
                    {
                      "filterProperty": "Tax.Name",
                      "property": "TaxId",
                      "sortProperty": "Tax.Name",
                      "template": "${data.Tax?.Name}",
                      "title": "Tax",
                      "visible": false
                    },
                    {
                      "property": "Total",
                      "title": "Total",
                      "visible": false
                    },
                    {
                      "property": "Discount",
                      "title": "Discount",
                      "visible": false
                    },
                    {
                      "property": "BeforeTax",
                      "title": "Before Tax",
                      "visible": false
                    },
                    {
                      "property": "TaxAmount",
                      "title": "Tax Amount",
                      "visible": false
                    },
                    {
                      "property": "GrandTotal",
                      "title": "Grand Total"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Invoice",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "SimpleInvoice.deleteInvoice",
                                "parameters": [
                                  {
                                    "name": "InvoiceId",
                                    "value": "${data.InvoiceId}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          },
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "size": "sm",
                          "text": "",
                          "type": "button"
                        }
                      ],
                      "textAlign": "center",
                      "width": "70px"
                    }
                  ],
                  "data": "${getInvoicesResult}",
                  "events": {
                    "loadData": [],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "InvoiceId",
                            "value": "${event.InvoiceId}"
                          }
                        ],
                        "path": "edit-invoice",
                        "type": "navigate"
                      }
                    ]
                  },
                  "filterMode": "advanced",
                  "itemType": "TlaxRatio.Models.SimpleInvoice.Invoice",
                  "name": "grid0",
                  "title": "",
                  "type": "grid"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "condition": "string.IsNullOrEmpty(search)",
        "name": "search",
        "type": "set",
        "value": "\"\"",
        "valueType": "string"
      },
      {
        "name": "SimpleInvoice.getInvoices",
        "parameters": [
          {
            "name": "$filter",
            "operator": "or",
            "value": [
              {
                "operation": "contains",
                "property": "InvoiceNumber",
                "type": "string",
                "value": "\"${search}\""
              }
            ]
          },
          {
            "name": "$expand",
            "value": "Company,Customer,Tax"
          }
        ],
        "then": [
          {
            "name": "getInvoicesResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<TlaxRatio.Models.SimpleInvoice.Invoice>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Invoices"
}