{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Change Password",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "action": "",
                  "components": [
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "UserName",
                              "name": "lblUserName",
                              "text": "UserName",
                              "type": "label"
                            }
                          ],
                          "name": "col1",
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "disabled": true,
                              "name": "UserName",
                              "style": {
                                "width": "100%"
                              },
                              "type": "textbox",
                              "value": "${Security.User.UserName}"
                            }
                          ],
                          "name": "col0",
                          "type": "col"
                        }
                      ],
                      "name": "row0",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "OldPassword",
                              "name": "lblOldPassword",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Old Password",
                              "type": "label"
                            }
                          ],
                          "name": "col2",
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "OldPassword",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password",
                              "value": "${OldPassword}"
                            },
                            {
                              "component": "OldPassword",
                              "name": "OldPasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Old Password is required",
                              "type": "required-validator"
                            }
                          ],
                          "name": "col3",
                          "type": "col"
                        }
                      ],
                      "name": "row1",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "NewPassword",
                              "name": "lblNewPassword",
                              "style": {
                                "width": "100%"
                              },
                              "text": "New Password",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "NewPassword",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password",
                              "value": "${NewPassword}"
                            },
                            {
                              "component": "NewPassword",
                              "name": "NewPasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Password is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "ConfirmPassword",
                              "name": "lblConfirmPassword",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Confirm password",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "ConfirmPassword",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password",
                              "value": "${ConfirmPassword}"
                            },
                            {
                              "component": "ConfirmPassword",
                              "name": "ConfirmPasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "ConfirmPassword is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "buttonStyle": "primary",
                              "buttonType": "submit",
                              "disabled": "${Security.User.UserName == \"administrator\"}",
                              "events": {
                                "click": []
                              },
                              "icon": "save",
                              "name": "btnChangePassword",
                              "text": "Change password",
                              "type": "button"
                            },
                            {
                              "buttonStyle": "light",
                              "events": {
                                "click": [
                                  {
                                    "type": "back"
                                  }
                                ]
                              },
                              "name": "btnCancel",
                              "text": "Cancel",
                              "type": "button"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "type": "row"
                    }
                  ],
                  "data": "@(user)",
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "${result.Message}",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "ProcesChangePassword",
                        "parameters": [
                          {
                            "name": "user",
                            "type": "TlaxRatio.Models.ApplicationUser",
                            "value": "${user}"
                          },
                          {
                            "name": "oldPassword",
                            "type": "string",
                            "value": "${OldPassword}"
                          },
                          {
                            "name": "newPassword",
                            "type": "string",
                            "value": "${NewPassword}"
                          },
                          {
                            "name": "confirmPassword",
                            "type": "string",
                            "value": "${ConfirmPassword}"
                          }
                        ],
                        "schema": {
                          "$ref": "#/definitions/IdentityResult",
                          "async": true,
                          "dotnetType": "System.Threading.Tasks.Task<IdentityResult>"
                        },
                        "then": [
                          {
                            "condition": "${result.Succeeded == true}",
                            "detail": "Change password success!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          },
                          {
                            "condition": "${result.Succeeded == true}",
                            "name": "Relogin",
                            "schema": {
                              "$ref": "#/definitions/Task",
                              "dotnetType": "System.Threading.Tasks.Task"
                            },
                            "type": "invoke-method"
                          }
                        ],
                        "type": "invoke-method"
                      }
                    ]
                  },
                  "itemType": "ApplicationUser",
                  "method": "",
                  "name": "form0",
                  "type": "template-form",
                  "visible": "${user != null}"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "condition": "Security.User != null",
        "name": "Security.getUserById",
        "parameters": [
          {
            "name": "Id",
            "value": "${Security.User.Id}"
          }
        ],
        "then": [
          {
            "name": "user",
            "type": "set",
            "value": "${result}",
            "valueType": "ApplicationUser"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "OldPassword",
        "type": "set",
        "value": "\"\"",
        "valueType": "string"
      },
      {
        "name": "NewPassword",
        "type": "set",
        "value": "\"\"",
        "valueType": "string"
      },
      {
        "name": "ConfirmPassword",
        "type": "set",
        "value": "\"\"",
        "valueType": "string"
      }
    ]
  },
  "layout": "Main",
  "name": "Profile"
}